<MudAppBar Color="Color.Dark" Fixed="false">
    <MudButton Href="/" Variant="Variant.Filled" Color="Color.Dark" DisableElevation>
        <MudText Typo="Typo.h6">Home</MudText>
    </MudButton>
    <MudSpacer/>
    <MudText Typo="Typo.h4">
        <b>Elevators</b>
    </MudText>
    <MudSpacer/>
    <AuthorizeView>
        <Authorized>
            <MudButton Color="Color.Inherit" OnClick="@ToggleOpen" @onfocusout="@ToggleOpen"><MudText Typo="Typo.h6">@AccountState.DisplayName</MudText><MudImage Src="@AccountState.Avatar"/></MudButton>
            <div class="right-0 mt-6">
            <MudPopover Open="@_open" Fixed="false" Class="px-4 pt-4" Style="background-color: rgb(66,66,66)">
                <div class="d-flex flex-column text-center">
                    <MudButton Href="/">
                        <MudText Typo="Typo.h6">View Profile</MudText>
                    </MudButton>
                    <MudButton Href="/">
                        <MudText Typo="Typo.h6">Log Out</MudText>
                    </MudButton>
                    
                    
                </div>
            </MudPopover>
            </div>
        </Authorized>
        <NotAuthorized>
            <MudButton Href=@Configuration["uri:oauth2"] Variant="Variant.Filled" Color="Color.Dark" DisableElevation>
                <MudText Typo="Typo.h6">Sign In</MudText>
            </MudButton>
        </NotAuthorized>
    </AuthorizeView>

</MudAppBar>