    <MudCard><img src="images/undraw_programming_re_kg9v.svg" class="bg-gray-800 w-96 h-96 mr-96 float-right p-10"></MudCard>
</Mudcard>

<MudCard class="flex flex-row mt-4 mb-4 justify-between">
    <MudCard><img src="images/discord-icon.svg" class="bg-gray-800 w-96 h-96 ml-96 p-10"></MudCard>
    <MudText Typo="Typo.h4" Style="@($"color:{Colors.Grey.Lighten1}")" Class="!mr-96 !mt-36 text-center block">Have a full overview of<br>people who are playing and<br>their actions</MudText>
</MudCard>

</div>
