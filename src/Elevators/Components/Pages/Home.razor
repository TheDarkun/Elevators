@page "/"

<PageTitle>Home</PageTitle>

<div class="flex flex-col mt-4 mb-4">
    <MudText Typo="Typo.h3" Align="Align.Center" Style="font-weight: bold;">Elevate to the highest <span class="text-indigo-500">points</span>!</MudText>
