@inherits Fluxor.Blazor.Web.Components.FluxorComponent
@rendermode InteractiveWebAssembly
<MudAppBar Elevation="0" Style="background: var(--mud-palette-surface);" Class="!border-b-[var(--mud-palette-lines-default)] !border-b-[1px]" Fixed="false">

    <MudButton Href="/" Variant="Variant.Text" DisableElevation>
        <MudText Typo="Typo.h6">Home</MudText>
    </MudButton>
    <MudSpacer/>
    <MudText Typo="Typo.h4">
        <b>Elevators</b>
    </MudText>
    <MudSpacer/>

    <AuthorizeView>
        <Authorized>
            <HeaderDropdown/>
        </Authorized>
        <NotAuthorized>
            <MudButton Href="@ConfigurationState.Value.Oauth2Uri" Variant="Variant.Text" DisableElevation>
                <MudText Typo="Typo.h6">Sign In</MudText>
            </MudButton>
        </NotAuthorized>
    </AuthorizeView>
</MudAppBar>